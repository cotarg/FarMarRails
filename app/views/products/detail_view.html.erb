<h1 class="vendor"><%= @vendor.name %></h1>
<h2 class="">Products</h2>

<% products = Product.where(vendor_id: @vendor.id) %>

<% products.each do |product| %>
	<p class="product-detail-listing">
		<span class="product-bold-text">Product ID:</span> <%= product.id %><br>
		<%= product.item.capitalize %>
		
	</p>	
<%end%>