<h1 class="vendor"><%= @vendor.name %></h1>
<h2 class="">Sales</h2>

<% sales = Sale.where(vendor_id: @vendor.id) %>

<% sales.each do |sale| %>
	<p class="sale-detail-listing">
		Sale ID: <%= sale.sale_id %><br>
    Sale Amount in Cents: <%= sale.sale_amount %><br>
    Sale Date: <%= sale.transaction_time %><br>
    Sale Product: <%= sale.product_id %><br>

	</p>	
<%end%>

<%= link_to "Create a New Product", products_new_path %>